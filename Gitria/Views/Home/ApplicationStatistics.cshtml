@model Gitria.Core.Models.Repository
@{
    Layout = null;
}

<div style="width: 20%; float: left">
    <div id="@(Model.Name)" data-toggle="tooltip" title="@Model.Name" class="applicationIcon" style="float: left">
        <span class="applicationText">@Model.Initials</span>
    </div>
    <div class="appDeletionsContainer">
        <canvas id="@(Model.Name)Deletions" class="appDeletions" height="110" width="110"></canvas>
    </div>
    <div class="appAdditionsContainer">
        <canvas id="@(Model.Name)Additions" class="appAdditions" height="120" width="120"></canvas>
    </div>
</div>
<div style="float: right; width: 80%; max-height: 160px">
    <canvas id="@(Model.Name)CommitStats" height="160"></canvas>
</div>

<script>
    GenerateChartForId("@Model.Name", @Html.Raw(Json.Encode(Model.WeeklyRepositoryStatistics)));
</script>